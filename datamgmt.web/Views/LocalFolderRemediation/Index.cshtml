@model IEnumerable<datamgmt.domain.DataModels.Admin.LocalFolderRemediation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Local Folder Remediation </h1>

<p>
    <a asp-action="Create">Create New</a>
       @using (Html.BeginForm()){    
         <p> Title: @Html.TextBox("SearchString") </p>
         <p> <input type="submit" value="Filter" /></p> 
        } 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Email)https://schedule.ilivelifewell.com/
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID"> Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>

                
            </tr>
}
    </tbody>
</table>
