<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DLPP</title>
          <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">

    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" >
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aries.web.styles.css" asp-append-version="true" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: dodgerblue;">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="HelloWorld" asp-action="Index">DLPP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle nav-link text-light" data-toggle="dropdown" href="#">  
                                 
                                <span class="caret">Access</span>  
                            </a>  
                                <ul class="dropdown-menu" id="ui-basic" style="background-color: dodgerblue;">  
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="UserAccounts" asp-action="Index">User Account</a>
                                    </li>
                                </ul>
                        </li>
                        <li class="dropdown">  
                            <a class="dropdown-toggle nav-link text-light" data-toggle="dropdown" href="#">  
                                 
                                <span class="caret">Admin</span>  
                            </a>  
                                <ul class="dropdown-menu" id="ui-basic" style="background-color: dodgerblue;">  
@*
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="LocalFolderRemediation" asp-action="Index">LocalFolderRemediation</a>
                                    </li>*@
                                                            <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="USBException" asp-action="Index">USBException</a>
                                    </li>
         
                                                             </ul>  
                        </li>  
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @{
                var isRole = User.IsInRole("Admin");
            }
            @RenderBody()
        </main>
    </div>

    <br />
    <br />

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DLPP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/jquery-2.1.4.min.js" asp-append-version="true"></script>  
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/hoverable-collapse.js" asp-append-version="true"></script>
</body>
</html>
