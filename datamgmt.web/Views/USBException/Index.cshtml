@model IEnumerable<datamgmt.domain.DataModels.Admin.USBException>

@{
    ViewData["FirstName"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>USBException</h1>

<p>
    <a asp-action="Create">Create New</a>
       @using (Html.BeginForm()){   
         <p>FirstName: @Html.TextBox("SearchFirst") </p>
         <p>LastName: @Html.TextBox("SearchLast") </p>
         <p> Email: @Html.TextBox("SearchEmail") </p>
         <p> Abbott 511: @Html.TextBox("Search511") </p>
         <p> <input type="submit" value="Filter" /></p> 
        } 

</p>
<table class="table">
    <thead>
        <tr>
                                    <th>
                @Html.DisplayNameFor(model => model.UPI)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Abbott511)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
                                <th>
                @Html.DisplayNameFor(model => model.EmailID)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
