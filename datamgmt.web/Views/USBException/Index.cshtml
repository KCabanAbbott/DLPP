                @Html.DisplayNameFor(model => model.RequestedDate)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.ArcherException)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.AddOrRemove)
            </th>
                                    <th>
                @Html.DisplayNameFor(model => model.ItemType)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                          <td>
                @Html.DisplayFor(modelItem => item.UPI)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Abbott511)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Organization)
            </td>
                         <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
                                    <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                          <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.RequestedDate)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.ArcherException)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.AddOrRemove)
            </td>
                          <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>

                @if (User.Identity?.Name == item.EmailID)
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID"> Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>

                }
                else
                {
                               <td>
                <a asp-action="Details" asp-route-id="@item.ID"> Details</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
